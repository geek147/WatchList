<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textShortName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="start"
        android:paddingStart="20dp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textPrice"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textShortName" />

    <TextView
        android:id="@+id/textFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="20dp"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textShortName"
        app:layout_constraintEnd_toStartOf="@+id/textChange"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textPrice"
        app:layout_constraintStart_toEndOf="@+id/textFullName" />

</androidx.constraintlayout.widget.ConstraintLayout>
